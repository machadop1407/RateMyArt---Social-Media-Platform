<!DOCTYPE html>
<head>
    <title>Upload Project</title>
    <%- include('includes/head.ejs') %>
    <link rel="stylesheet" type="text/css" href="../CSS/upload.css">
    <!-- <script src="../JavaScript/profile.js"></script> -->
</head>
<body>
	
<%- include('includes/header.ejs') %>

<div class="container upload-form">
    <form method="POST" action="/upload" enctype="multipart/form-data" style="margin-top: 200px;">
        <div class="custom-file">
            <input type="file" accept="image/*" class="custom-file-input" id="customFile" name="upload_image">
            <label class="custom-file-label" for="customFile">Choose Your Artwork</label>
        </div>
      <div class="form-group">
        <label for="uploadTitle" style="margin-top: 10px;">Title:</label>
        <input type="text" class="form-control" id="uploadTitle" placeholder="Enter Title" name="uploadTitle" required>
        <div class="valid-feedback">Valid.</div>
        <div class="invalid-feedback">Please fill out this field.</div>
      </div>
      <div class="form-group">
        <label for="uploadDescription">Description:</label>
        <input type="text" class="form-control" id="uploadDescription" placeholder="Enter Description" name="uploadDescription" required>
        <div class="valid-feedback">Valid.</div>
        <div class="invalid-feedback">Please fill out this field.</div>
      </div>
  
      <input type="submit" class="btn btn-primary" value="Submit">
    </form>
</div>

<script>
    $(".custom-file-input").on("change", function() {
      var fileName = $(this).val().split("\\").pop();
      $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
    });


    </script>




